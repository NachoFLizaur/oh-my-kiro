{
  "name": "wraith",
  "description": "Wraith the Direct Executor — handles direct user requests by delegating to specialized subagents. For plan execution, use Revenant.",
  "prompt": "file://../prompts/wraith.md",
  "tools": [
    "read",
    "write",
    "shell",
    "glob",
    "grep",
    "use_subagent"
  ],
  "allowedTools": [
    "read",
    "glob",
    "grep",
    "write",
    "shell",
    "use_subagent"
  ],
  "toolsSettings": {
    "shell": {
      "autoAllowReadonly": true
    },
    "subagent": {
      "trustedAgents": ["ghost-explorer", "ghost-implementer", "ghost-reviewer", "ghost-oracle"],
      "availableAgents": ["ghost-explorer", "ghost-implementer", "ghost-reviewer", "ghost-oracle"]
    }
  },
  "resources": [
    "file://.kiro/steering/omk/**/*.md",
    "skill://.kiro/skills/**/SKILL.md"
  ],
  "hooks": {
    "agentSpawn": [
      {
        "command": "echo 'You are Wraith — direct task executor. For PLAN execution, tell the user to switch to Revenant (ctrl+a).'"
      },
      {
        "command": "sh .kiro/hooks/agent-spawn.sh",
        "timeout_ms": 10000
      }
    ],
    "preToolUse": [
      {
        "matcher": "shell",
        "command": "sh .kiro/hooks/pre-tool-use.sh",
        "timeout_ms": 5000
      }
    ]
  },
  "keyboardShortcut": "ctrl+e",
  "welcomeMessage": "Wraith ready. Give me a direct task, or switch to Revenant (ctrl+a) for plan execution."
}
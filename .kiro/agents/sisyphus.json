{
  "name": "sisyphus",
  "description": "The Executor — handles direct user requests by delegating to specialized subagents. For plan execution, use Atlas.",
  "prompt": "file://../prompts/sisyphus.md",
  "tools": [
    "read",
    "write",
    "shell",
    "glob",
    "grep",
    "use_subagent"
  ],
  "allowedTools": [
    "read",
    "glob",
    "grep",
    "write",
    "shell",
    "use_subagent"
  ],
  "toolsSettings": {
    "shell": {
      "autoAllowReadonly": true
    },
    "subagent": {
      "trustedAgents": ["omk-explorer", "omk-sisyphus-jr", "omk-reviewer"],
      "availableAgents": ["omk-explorer", "omk-sisyphus-jr", "omk-reviewer"]
    }
  },
  "resources": [
    "file://.kiro/steering/omk/**/*.md"
  ],
  "hooks": {
    "agentSpawn": [
      {
        "command": "echo 'You are Sisyphus — direct task executor. For PLAN execution, tell the user to switch to Atlas (ctrl+a).'"
      },
      {
        "command": "sh .kiro/hooks/agent-spawn.sh",
        "timeout_ms": 10000
      }
    ],
    "preToolUse": [
      {
        "matcher": "shell",
        "command": "sh .kiro/hooks/pre-tool-use.sh",
        "timeout_ms": 5000
      }
    ]
  },
  "keyboardShortcut": "ctrl+e",
  "welcomeMessage": "Sisyphus ready. Give me a direct task, or switch to Atlas (ctrl+a) for plan execution."
}

{
  "name": "phantom",
  "description": "Phantom the Planner â€” interviews users, delegates research to subagents, and generates structured execution plans",
  "prompt": "file://../prompts/phantom.md",
  "tools": [
    "read",
    "write",
    "shell",
    "use_subagent"
  ],
  "allowedTools": [
    "read",
    "write",
    "use_subagent"
  ],
  "toolsSettings": {
    "write": {
      "allowedPaths": [
        ".kiro/plans/**",
        ".kiro/notepads/**"
      ]
    },
    "shell": {
      "autoAllowReadonly": true
    },
    "subagent": {
      "trustedAgents": ["ghost-explorer", "ghost-researcher", "ghost-analyst", "ghost-validator"],
      "availableAgents": ["ghost-explorer", "ghost-researcher", "ghost-analyst", "ghost-validator"]
    }
  },
  "resources": [
    "file://.kiro/steering/omk/**/*.md",
    "skill://.kiro/skills/**/SKILL.md"
  ],
  "hooks": {
    "agentSpawn": [
      {
        "command": "echo 'You are Phantom the PLANNER. You create PLANS, never implement. Delegate all exploration to ghost-explorer.'"
      },
      {
        "command": "sh .kiro/hooks/agent-spawn.sh",
        "timeout_ms": 10000
      }
    ],
    "preToolUse": [
      {
        "matcher": "fs_read",
        "command": "bash .kiro/hooks/phantom-read-guard.sh"
      },
      {
        "matcher": "fs_write",
        "command": "bash .kiro/hooks/phantom-write-guard.sh"
      },
      {
        "matcher": "shell",
        "command": "sh .kiro/hooks/pre-tool-use.sh",
        "timeout_ms": 5000
      },
      {
        "matcher": "write",
        "command": "sh .kiro/hooks/pre-tool-use.sh",
        "timeout_ms": 5000
      }
    ]
  },
  "keyboardShortcut": "ctrl+p",
  "welcomeMessage": "Phantom ready. What would you like to plan?"
}